{{>layouts/header}}

<!-- jumbotron -->
<div class="jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>

<!-- table -->
<table class="table table-hover">
    <tbody>
    {{#article}}

        <tr>
            <th>글번호</th>
            <td>{{id}}</td>
        </tr>

        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>

        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>

    {{/article}}
    </tbody>

    <tfoot>
    <tr>
        <th></th>
        <td>
            <a class="btn btn-info" href="/articles/edit/{{id}}">수정</a>

            <button class="btn btn-danger" id="article-destroy-btn">삭제</button>

        </td>


    </tr>
    </tfoot>

</table>

<!-- 앞페이지로 돌아가는 버튼 -->
<a href="/articles" class="btn btn-success btn-block">목록으로</a>

<Script src="/js/app/article.js"></script> <!-- article.js 삽입 -->

{{>layouts/footer}}
